-- AWAA BOT - FULL FIXED (Mobile)

getgenv().WebhookURL = "ISI_WEBHOOK_KAMU_DI_SINI"

local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local LocalPlayer = Players.LocalPlayer

local Enabled = {
    Common=true, Rare=true, Epic=true,
    Legendary=true, Mythic=true, Secret=true
}

local function getRequest()
    return http_request or request or (syn and syn.request)
end

local function sendWebhook(data)
    local req = getRequest()
    if not req then return end
    req({
        Url = getgenv().WebhookURL,
        Method = "POST",
        Headers = {["Content-Type"]="application/json"},
        Body = HttpService:JSONEncode(data)
    })
end

-- UI
local gui = Instance.new("ScreenGui",game.CoreGui)
local main = Instance.new("Frame",gui)
main.Size = UDim2.fromScale(0.3,0.4)
main.Position = UDim2.fromScale(0.35,0.3)
main.BackgroundColor3 = Color3.fromRGB(15,15,15)
main.BackgroundTransparency = 0.15
main.Name = "AWAA_BOT"

local title = Instance.new("TextLabel",main)
title.Size = UDim2.new(1,0,0.15,0)
title.Text = "AWAA BOT"
title.TextColor3 = Color3.fromRGB(255,0,0)
title.BackgroundTransparency = 1

local minimized = false
local minimize = Instance.new("TextButton",main)
minimize.Size = UDim2.new(0.15,0,0.15,0)
minimize.Position = UDim2.new(0.7,0,0,0)
minimize.Text = "_"

local close = Instance.new("TextButton",main)
close.Size = UDim2.new(0.15,0,0.15,0)
close.Position = UDim2.new(0.85,0,0,0)
close.Text = "X"

minimize.MouseButton1Click:Connect(function()
    minimized = not minimized
    main.Size = minimized and UDim2.fromScale(0.15,0.15) or UDim2.fromScale(0.3,0.4)
end)

close.MouseButton1Click:Connect(function()
    gui:Destroy()
end)

-- DETECTOR
for _,v in pairs(workspace:GetDescendants()) do
    if v:IsA("RemoteEvent") and string.find(string.lower(v.Name),"fish") then
        v.OnClientEvent:Connect(function(info)
            if typeof(info)=="table" and Enabled[info.Rarity] then
                sendWebhook({
                    username="AWAA BOT",
                    embeds={{
                        title="ðŸŽ£ Fish Detected",
                        color=16711680,
                        fields={
                            {name="Player",value=info.Player or "?"},
                            {name="Fish",value=info.Fish or "?"},
                            {name="Weight",value=tostring(info.Weight)},
                            {name="Rarity",value=info.Rarity}
                        }
                    }}
                })
            end
        end)
    end
end

print("AWAA BOT FULL Loaded")
